<% include partials/header %>


<% blogs.forEach(function(blog) { %>
<div class="main container">
    <h1>
        <%= blog.title %>
    </h1>
    <img src="<%= blog.image %>" alt="">
    <span><%= blog.date %></span>
    <p>
        <%- blog.body.substring(0, 100) %> ...
    </p>
    <a href="/blogs/<%= blog._id%>">More details</a>
</div>
<%  })%>

<% include partials/footer %>